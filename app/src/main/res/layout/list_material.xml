<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/card_view"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/material_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Materi"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/date_of_publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/material_name"
                android:text="Tanggal di publikasikan"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/number_of_quizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:text="Jumlah Kuis"
                android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>