<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="#fff"
        android:id="@+id/subject_list_layout">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/card_view"
            android:padding="15dp"
            android:id="@+id/card_view_layout">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Nama Mata Kuliah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/subject_name"
                    android:textSize="22dp"/>
            <TextView
                    android:text="Tahun Ajaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/year_of_study"
                    android:textSize="14dp"
                    android:layout_below="@id/subject_name"/>
            <TextView
                    android:text="Nama Dosen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lecturer_name"
                    android:textSize="14dp"
                    android:gravity="start"
                    android:layout_alignParentBottom="true"/>
            <TextView
                    android:text="Jumlah Siswa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/students_number"
                    android:textSize="14dp"
                    android:gravity="end"
                    android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>