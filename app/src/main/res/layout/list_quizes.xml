<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardElevation="0dp"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/card_view_quiz_layout">

    <LinearLayout
        android:id="@+id/quizes_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/upper_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/quiz_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Kuis"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/due_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/quiz_title"

                android:text="Batas Akhir Pengerjaan"
                android:textColor="@color/colorSubtitle"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/result_average"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="86"
                    android:textSize="22dp"
                    android:textAlignment="center"/>

                <View
                    android:id="@+id/divider_2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/upper_info"
                    android:background="#BDC3C7" />

                <TextView
                    android:id="@+id/score_averagee"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="98"
                    android:textSize="22dp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/a"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Rerata Perolehan"
                    android:textSize="14dp"
                    android:textAlignment="center"/>

                <View
                    android:id="@+id/divider_3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/upper_info"
                    android:background="#BDC3C7" />

                <TextView
                    android:id="@+id/b"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Rerata Kelas"
                    android:textSize="14dp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/upper_info"
            android:background="#BDC3C7" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:padding="15dp">

            <TextView
                android:id="@+id/quiz_counter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar_number_of_quizes"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:text="9/10"/>

            <ProgressBar
                android:id="@+id/progress_bar_number_of_quizes"
                style="@style/MyProgressBar"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:progress="30" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>